<VirtualHost *:80>
    ServerName wordpress.{{dns_zone}}
    DocumentRoot /var/www/html/wordpress
    # Possible values include: debug, info, notice, warn, error, crit, alert, emerg.
    LogLevel debug

    ErrorLog /var/log/httpd/wordpress-error.log
    CustomLog /var/log/httpd/wordpress-access.log combined
    ForensicLog /var/log/httpd/wordpress-forensic.log
</VirtualHost>

<VirtualHost *:443>
    ServerName wordpress.{{dns_zone}}
    DocumentRoot /var/www/html/wordpress
    # Possible values include: debug, info, notice, warn, error, crit, alert, emerg.
    LogLevel debug

    ErrorLog /var/log/httpd/wordpress-error.log
    CustomLog /var/log/httpd/wordpress-access.log combined
    ForensicLog /var/log/httpd/wordpress-forensic.log

    SSLEngine on
    SSLCertificateFile /etc/pki/tls/certs/wordpress_server.crt
    SSLCertificateKeyFile /etc/pki/tls/private/wordpress_server.key
    SSLCACertificateFile /etc/pki/tls/certs/cacert.crt
</VirtualHost>